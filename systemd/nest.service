[Unit]
Description=nest daemon
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/node %h/Projects/Personal/nest/dist/main.js %h/Projects/Personal/nest/config.yaml
WorkingDirectory=%h/Projects/Personal/nest
Restart=on-failure
RestartSec=5
Environment=NODE_ENV=production
EnvironmentFile=-%h/.config/nest/env

[Install]
WantedBy=default.target
