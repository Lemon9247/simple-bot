FROM node:22-slim AS build
WORKDIR /app
COPY package.json package-lock.json ./
RUN npm ci
COPY tsconfig.json ./
COPY src/ src/

# Build the workspace (Vite SPA â†’ public/)
COPY workspace/ workspace/
RUN cd workspace && npm ci && npm run build

RUN npx tsc

FROM node:22

# Core tools pi expects
RUN apt-get update && apt-get install -y \
    git \
    openssh-client \
    curl \
    wget \
    jq \
    ripgrep \
    fd-find \
    fzf \
    tree \
    less \
    vim-tiny \
    # Build essentials for working on projects
    build-essential \
    python3 \
    python3-pip \
    python3-venv \
    # Networking
    ca-certificates \
    dnsutils \
    iptables \
    && rm -rf /var/lib/apt/lists/*

# pi coding agent
RUN npm install -g @mariozechner/pi-coding-agent

# nest
WORKDIR /app
COPY package.json package-lock.json ./
RUN npm ci --omit=dev
COPY --from=build /app/dist/ dist/
# Workspace build outputs the Vite SPA to public/
COPY --from=build /app/public/ public/

COPY scripts/entrypoint.sh /entrypoint.sh

HEALTHCHECK --interval=30s --timeout=5s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:8484/health || exit 1

ENTRYPOINT ["/entrypoint.sh"]
CMD ["node", "dist/main.js", "/config/config.yaml"]
